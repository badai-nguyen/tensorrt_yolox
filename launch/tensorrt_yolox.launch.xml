<launch>
    <group>
        <arg name="yolo_type" default="yolox" />
        <arg name="model_path" default="$(find-pkg-share tensorrt_yolox)/data/yolox-tiny.onnx" />
        <arg name="label_path" default="$(find-pkg-share tensorrt_yolox)/data/label.txt"/>
        <arg name="input_topic" default="/image_raw" />
        <arg name="output_object" default="/perception/object_recognition/detection/rois" />
        <arg name="output_image" default="/perception/object_recognition/detection/rois/debug/image" />
        <arg name="gpu_id" default="0"/>
        <node pkg="tensorrt_yolox" exec="tensorrt_yolox_node_exe" >
            <param name="model_path" value="$(var model_path)" />
            <param name="label_path" value="$(var label_path)" />
            <remap from="/tensorrt_yolox/in/image" to="$(var input_topic)" />
            <remap from="/tensorrt_yolox/out/image" to="$(var output_image)" />
            <remap from="/tensorrt_yolox/out/objects" to="$(var output_object)" />
        </node>
    </group>
</launch>
